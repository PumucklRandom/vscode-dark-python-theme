{
    "$schema": "vscode://schemas/color-theme",
    "name": "Dark Python Theme",
    "type": "dark",
    "colors": {
        // Title Bar
        "titleBar.activeBackground": "#303030",
        "titleBar.inactiveBackground": "#252525",
        "titleBar.border": "#3A3A3A",
        // Editor
        "editor.background": "#1E1E1E",
        "editor.foreground": "#E6E6E6",
        "editorRuler.foreground": "#464646",
        "editorGutter.background": "#252525",
        "editorGroup.border": "#505050",
        "editorGroupHeader.tabsBorder": "#505050",
        "editorGroupHeader.tabsBackground": "#252525", // diff
        "editorCodeLens.foreground": "#555555",
        "editorIndentGuide.background1": "#404040",
        "editorIndentGuide.activeBackground1": "#707070",
        "editorLineNumber.foreground": "#969696",
        "editorLineNumber.activeForeground": "#E6E6E6",
        "editorWhitespace.foreground": "#3A3A3A",
        // editor highlighting
        "editor.lineHighlightBackground": "#3A3A3A",
        "editor.inactiveSelectionBackground": "#3a3a3a40",
        "editor.selectionBackground": "#000040",
        "editor.selectionHighlightBorder": "#004080",
        "editor.selectionHighlightBackground": "#00408020",
        "editor.wordHighlightBorder": "#004080",
        "editor.wordHighlightBackground": "#00408020",
        "editor.wordHighlightStrongBorder": "#004080",
        "editor.wordHighlightStrongBackground": "#00408020",
        "editor.findMatchBackground": "#000040",
        "editor.findMatchHighlightBorder": "#306030",
        "editor.findMatchHighlightBackground": "#20402020",
        // type hint highlighting
        "editorInlayHint.background": "#1E1E1E",
        "editorInlayHint.foreground": "#0064FFA0",
        "editorInlayHint.typeBackground": "#1E1E1E",
        "editorInlayHint.typeForeground": "#0064FFA0",
        // bracket highlighting
        "editorBracketMatch.background": "#000040",
        "editorBracketHighlight.foreground1": "#FADC00",
        "editorBracketHighlight.foreground2": "#00C800",
        "editorBracketHighlight.foreground3": "#0080FF",
        "editorBracketHighlight.foreground4": "#FF40FF",
        "editorBracketHighlight.foreground5": "#00DCDC",
        "editorBracketHighlight.foreground6": "#FAFAFA",
        "editorBracketHighlight.unexpectedBracket.foreground": "#FA2020",
        // editor marking
        "editorError.foreground": "#FA2020",
        "editorWarning.foreground": "#FAFA00",
        "editorInfo.foreground": "#808040",
        // Menu
        "menu.background": "#303030",
        "menu.foreground": "#CCCCCC",
        "menu.border": "#505050",
        // Panel
        "panel.border": "#4B4B4B", // diff
        "panel.background": "#303030", // diff
        "panelTitle.activeBorder": "#408080",
        "panelTitle.activeForeground": "#D3D3D3",
        "panelSection.dropBackground": "#1E1E1E",
        // Side Bar
        "sideBar.border": "#464646", // diff
        "sideBar.foreground": "#A7A7A7", // diff
        "sideBar.background": "#252525", // diff  
        "sideBarTitle.foreground": "#BBBBBB",
        "sideBarSectionHeader.background": "#00000033", // diff
        "sideBarSectionHeader.border": "#CCCCCC33", // diff
        // Activity Bar
        "activityBar.border": "#464646", // diff
        "activityBar.background": "#303030",
        "activityBar.foreground": "#C5C5C5", // diff
        "activityBarBadge.background": "#007ACC",
        // Minimap highlighting
        "minimap.selectionHighlight": "#000040F0",
        "minimap.selectionOccurrenceHighlight": "#0040A0F0",
        "minimap.findMatchHighlight": "#004000F0",
        "minimap.errorHighlight": "#FA2020",
        "minimap.warningHighlight": "#FADC20",
        // Scrollbar highlighting
        // ...
        // Status Bar
        "statusBar.foreground": "#BBBBBB",
        "statusBar.debuggingForeground": "#CCCCCC",
        "statusBar.background": "#303030",
        "statusBar.debuggingBackground": "#805030",
        "statusBar.noFolderBackground": "#303030",
        "statusBar.border": "#4B4B4B",
        "statusBar.noFolderBorder": "#4B4B4B",
        "statusBar.debuggingBorder": "#4B4B4B",
        "statusBarItem.remoteBackground": "#208060",
        "statusBarItem.remoteForeground": "#FFFFFF",
        // Terminal
        "terminal.background": "#252525",
        "terminal.foreground": "#BBBBBB",
        // Tab
        "tab.border": "#555555", // diff
        "tab.hoverBackground": "#606060", // diff
        "tab.unfocusedHoverBackground": "#606060", // diff
        "tab.activeBorder": "#4080B0",
        "tab.activeBackground": "#464646", // diff
        "tab.inactiveForeground": "#BBBBBB",
        "tab.unfocusedActiveForeground": "#BBBBBB",
        "tab.unfocusedInactiveForeground": "#BBBBBB",
        "tab.inactiveBackground": "#3A3A3A",
        "tab.lastPinnedBorder": "#CCCCCC33",
        // List 
        "list.dropBackground": "#3A3A3A",
        "list.hoverBackground": "#303030",
        "list.inactiveSelectionBackground": "#252525",
        "list.activeSelectionForeground": "#ADADAD",
        "list.activeSelectionIconForeground": "#FFFFFF",
        // Input
        "input.border": "#646464",
        "input.background": "#464646",
        "input.foreground": "#BBBBBB",
        "input.placeholderForeground": "#A6A6A6",
        // Dropdown
        "dropdown.listBackground": "#646464",
        "dropdown.foreground": "#BBBBBB",
        "dropdown.border": "#646464",
        // Widgets
        "editorWidget.background": "#303030",
        "editorWidget.border": "#464646",
        "editorSuggestWidget.background": "#3A3A3A",
        // Git
        "gitDecoration.modifiedResourceForeground": "#406096",
        "gitDecoration.stageModifiedResourceForeground": "#406096",
        "gitDecoration.untrackedResourceForeground": "#964949",
        "gitDecoration.conflictingResourceForeground": "#964949",
        "gitDecoration.deletedResourceForeground": "#4B4B4B",
        "gitDecoration.stageDeletedResourceForeground": "#4B4B4B",
        "gitDecoration.ignoredResourceForeground": "#808080",
        "gitDecoration.addedResourceForeground": "#409640",
        "gitDecoration.renamedResourceForeground": "#409640",
        // "gitDecoration.submoduleResourceForeground": "#808080",
        // Remains
        "settings.headerForeground": "#BBBBBB",
        "breadcrumb.background": "#303030",   
        "ports.iconRunningProcessForeground": "#329632",
        "terminal.inactiveSelectionBackground": "#3A3A3A",
    },

    // Semantic highlighting
    /* Be careful, overwrites all other rules */
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "*.typeHint": "#0064FF",
        "*.typeHintComment": "#0064FF",
    },

    // Syntax highlighting: specific rules
    "tokenColors": [

        // General

        {
            "scope": "emphasis",
            "settings": {
                "fontStyle": "italic",
            }
        },
        {
            "scope": "strong",
            "settings": {
                "fontStyle": "bold",
            }
        },
        {
            "scope": "header",
            "settings": {
                "foreground": "#000080",
            }
        },
        {
            "scope": "source",
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        {   
            "scope": "support.constant.handlebars",
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        {
            "scope": "text",
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        {
            "name": "Colors",
            "scope": [
                "constant.other.color",
            ],
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        {
            "name": "Numbers",
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        // {
        //     "name": "Invalid",
        //     "scope": [
        //         "invalid",
        //         "invalid.illegal",
        //     ],
        //     "settings": {
        //         "foreground": "#FA4040",
        //     }
        // },
        {
            "name": "Comments",
            "scope": [
                "comment",
            ],
            "settings": {
                "foreground": "#408040",
            }
        },
        {
            "name": "Block Comments",
            "scope": [
                "comment.block.documentation",
                "string.quoted.docstring",
                "string.quoted.docstring punctuation.definition.string",
                "string.quoted.docstring punctuation.definition.comment",
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#408040",
            }
        },
        {
            "name": "TODO",
            "scope": [
                "keyword.codetag.notation.python",
            ],
            "settings": {
                "foreground": "#C8DC00",
            }
        },
        {
            "name": "String",
            "scope": [
                "string",
                "string.tag",
                "string.value",
                "string.quoted",
                "string.quoted punctuation.definition.string",
            ],
            "settings": {
                "foreground": "#C864DC",
            }
        },
        {
            "name": "Binary string",
            "scope": [ 
                "string.quoted.binary",
                "string.quoted.binary constant.character",
                "string.quoted.binary storage.type.string",
                "string.quoted.binary punctuation.definition.string",
            ],
            "settings": {
                "foreground": "#E696FA",
            }
        },
        {
            "name": "Constants",
            "scope": [
                "constant.keyword",
                "constant.language",
                "constant.character",
            ],
            "settings": {
                "foreground": "#0064FF",
            }
        },
        {
            "name": "Storage",
            "scope": [
                // "storage.type",  // overwrites to much
                // "storage.support",  
                "storage.modifier",
                "storage.type.class",
                "storage.type.format",
                "storage.type.function",
                "meta.var storage.type",
            ],
            "settings": {
                "foreground": "#0064FF"
            }
        },
        {
            "name": "Types",
            "scope": [
                // "support.type",  // overwrites to much
                "support.type.sys-types",
                "support.type.property-name",
                "support.type.vendored.property-name",
                "source.cpp storage.type",
                "entity.name.type.cpp",
                "entity.name.class.cpp",
                "entity.name.type.class.cpp",
                "meta.function.parameter",
                "meta.function-call.arguments support.type",
                "meta.item-access meta.item-access.arguments support.type",
            ],
            "settings": {
                "foreground": "#0064FF",
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword",  // overwrites to much
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "keyword.operator.newOperator",
                "keyword.operator.delete",
                "keyword.operator.expression",
                "keyword.operator.logical",
                "entity.name.operator",
                "entity.name.tag",
                "meta.tag",
            ],
            "settings": {
                "foreground": "#0064FF",
            }
        },
        {
            "name": "Operator and Punctuation",
            "scope": [
                "punctuation.separator",
                "punctuation.terminator",
                "punctuation.definition.tag",
                "punctuation.definition.variable",
                "punctuation.definition.constant",
                "punctuation.definition.metadata",
                "punctuation.definition.equals",
                "keyword.operator",
                "entity.name.function.operator",
                "invalid.deprecated.semicolon",
            ],
            "settings": {
                "foreground": "#009BFF",
            }
        },
        {
            "name": "Class/Function punctuation",
            "scope": [
                "entity.name.section",
                "punctuation.section",
            ],
            "settings": {
                "foreground": "#009BFF",
            }
        },
        {
            "name": "Class definition",
            "scope": [
                "entity.name.type.template",
                "entity.name.type.definition",
                "entity.name.type.declaration",
                "entity.name.class.template",
                "entity.name.class.definition",
                "entity.name.class.declaration",
                "entity.name.type.class.template",
                "entity.name.type.class.definition",
                "entity.name.type.class.declaration",
                "entity.name.type.class.python",
            ],
            "settings": {
                "foreground": "#80C8C8",
            }
        },
        {
            "name": "Function definition",
            "scope": [
                "entity.name.function.template",
                "entity.name.function.definition",
                "entity.name.function.declaration",
                "entity.name.method.template",
                "entity.name.method.definition",
                "entity.name.method.declaration",
                "entity.name.function.python",
            ],
            "settings": {
                "foreground": "#80C8C8",
            }
        },
        {
            "name": "Functions-call (Class-call)",
            "scope": [
                "meta.function-call",
            ],
            "settings": {
                "foreground": "#E6E6E6",
            }
        },
        {
            "name": "Builtin",
            "scope": [
                "support.type.python",
                "support.type.exception",
                "support.function.builtin",
                "meta.function-call support.function.builtin",
            ],
            "settings": {
                "foreground": "#FF0064",
            }
        },
        {
            "name": "Special functions",
            "scope": [
                "keyword.operator.cast",
                "keyword.operator.instanceof",
                "keyword.operator.sizeof",
                "keyword.operator.typeid",
                "keyword.operator.typeof",
            ],
            "settings": {
                "foreground": "#FF0064",
            }
        },
        {
            "name": "Decorators",
            "scope": [
                "punctuation.decorator",
                "meta.function.decorator support.type",
                "meta.function.decorator entity.name.function.decorator ",
            ],
            "settings": {
                "foreground": "#FF0064",
            }
        },
        {
            "name": "Preprocessor definitions (#define CONSTANT)",
            "scope": "entity.name.function.preprocessor",
            "settings": {
                "foreground": "#409696",
            }
        },
        {
            "name": "Capitalized variables (CONSTANT)",
            "scope": "variable.other.constant",
            "settings": {
                "foreground": "#409696",
            }
        },
        {
            "name": "Attributes",
            "scope": [
                "variable.other.property.cpp",
                "variable.other.property.js",
                "variable.other.property.ts",
                "entity.other.attribute-name",
            ],
            "settings": {
                "foreground": "#409696",
            }
        },
        {
            "name": "E.g. self Parameter",
            "scope": [
                "variable.language.special",
                "variable.parameter.function.language.special",
            ],
            "settings": {
                "foreground": "#409696",
            }
        },
        {
            "name": "Function call arguments",
            "scope": [
                "variable.parameter.function-call",
            ],
            "settings": {
                "foreground": "#409696",
            }
        },
        {
            "name": "URL",
            "scope": [
                "*url*",
                "*link*",
                "*uri*",
                "string.url",
                "string.other.link",
                "variable.parameter.url",
            ],
            "settings": {
                "foreground": "#2080FF",
                "fontStyle": "underline",
            }
        },

        // Python

        {
            "name": "Python special __methods__",
            "scope": [
                // "support.function.magic",  // every __name__
                "source.python support.function.magic",
                "support.variable.magic",
            ],
            "settings": {
                "foreground": "#C832C8",
            }
        },
        {
            // Python raw string overwrites regexp,
            // because regexp color highlighting is not available in python
            "name": "Python raw string",
            "scope": [
                "source.python string.regexp",
                "source.python string.regexp storage.type.string",
                "source.python string.regexp punctuation.definition.string.begin",
                "source.python string.regexp punctuation.definition.string.end",
                "source.python string.regexp support.other.parenthesis",
                "source.python string.regexp punctuation.character.set",
                "source.python string.regexp constant.character",
                "source.python string.regexp constant.character.escape",
                "source.python string.regexp keyword.operator.quantifier",
                "source.python string.regexp entity.name.tag",
                "source.python string.regexp comment",
                "source.python string.regexp storage.modifier",
            ],
            "settings": {
                "foreground": "#C864DC",
            }
        },

        // Regular Expressions

        {
            "name": "Regular Expressions",
            "scope": [
                "string.regexp",
                "string.regexp storage.type.string",
                "string.regexp punctuation.definition.string.begin",
                "string.regexp punctuation.definition.string.end",
            ],
            "settings": {
                "foreground": "#C864DC",  // 80C8C8
            }
        },
        {
            "name": "Parenthesis",
            "scope": [
                "string.regexp support.other.parenthesis",
            ],
            "settings": {
                "foreground": "#FADC00",
            }
        },
        {
            "name": "Bracket",
            "scope": [
                "string.regexp punctuation.character.set",
            ],
            "settings": {
                "foreground": "#00C800",
            }
        },
        {
            "name": "Character",
            "scope": [
                "string.regexp constant.character",
            ],
            "settings": {
                "foreground": "#C832C8",
            }
        },
        {
            "name": "Escape",
            "scope": [
                "string.regexp constant.character.escape",
            ],
            "settings": {
                "foreground": "#0064FF",
            }
        },
        {
            "name": "Quantifier",
            "scope": [
                "string.regexp keyword.operator.quantifier",
            ],
            "settings": {
                "foreground": "#E1E1E1",
            }
        },
        {
            "name": "Group recap",
            "scope": [
                "string.regexp entity.name.tag",
            ],
            "settings": {
                "foreground": "#FADC00",
            }
        },
        {
            "name": "Comment",
            "scope": [
                "string.regexp comment",
            ],
            "settings": {
                "foreground": "#408040",
            }
        },
        {
            "name": "?",
            "scope": [
                "string.regexp storage.modifier",
            ],
            "settings": {
                "foreground": "#FF0064",
            }
        },

        // Markup

        {
            "scope": "markup.italic",
            "settings": {
                "fontStyle": "italic",
            }
        },
        {
            "scope": "markup.heading",
            "settings": {
                "fontStyle": "bold",
            }
        },
        {
            "scope": "markup.bold",
            "settings": {
                "fontStyle": "bold",
            }
        },
        {
            "scope": "markup.underline",
            "settings": {
                "fontStyle": "underline",
            }
        },

        // INI, CFG, TOML

        {
            "name": "Section",
            "scope": [
                "entity.name.section.group-title.ini",
                "meta.table.toml support.type.property-name.table.toml",
            ],
            "settings": {
                "foreground": "#80C8C8",
            }
        },
    ]
}
